    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"],
  "include": ["*.ts", "**/*.ts"]
}
